<!DOCTYPE html>
<html>
<head>
  <meta charset = "utf-8">
  <title> </title>

</head>


<body>

  <form action="site.php" method = "post">

    Input Num1: <input type = "number" name="num1"><br>
    Input Num2: <input type = "number" name="num2"><br>
    Input Operator: <input type= "text" name="op"><br>
    <input type ="submit">

  </form>

  <?php

    $num1 = $_POST["num1"];
    $num2 = $_POST["num2"];
    $op = $_POST["op"];

    if($op == "+"){

      echo $num1 + $num2;
    }elseif($op == "-"){


      echo $num1 - $num2;
    }elseif( $op=="/"){

      echo $num1 / $num2;
    }elseif($op == "*"){

      echo $num1 * $num2;
    }else{

      echo "Invalid operator";
    }





  ?>



</body>
</html>
